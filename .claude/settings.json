{
  "permissions": {
    "allow": [
      "Bash(npm install:*)",
      "Bash(git add:*)",
      "Bash(git status:*)",
      "Bash(git log:*)"
    ],
    "ask": [
      "Bash(git push)",
      "Bash(git commit -m *)"
    ],
    "deny": [
      "WebFetch",
      "Read(./.env)",
      "Bash(rm *)"
    ]
  },
  "mcpServers": {
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server"
      ]
    }
  }
}